{
  "name": "catalepsy",
  "version": "1.0.8",
  "description": "Catalepsy is a medium-read-only wrapper that lets you get all user (public) posts, also get a single post in raw format, markdown or html",
  "main": "src/Catalepsy.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "npx jest --runInBand --forceExit",
    "test-precommit": "npx jest --runInBand --forceExit --testPathIgnorePatterns=/__mocks__/"
  },
  "author": {
    "name": "Carlos Flores",
    "email": "npm@zerothedragon.com",
    "url": "http://floresbenavides.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZeroDragon/Catalepsy"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "marked": "^0.3.7",
    "memoizee": "^0.4.11",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "lint-staged": "^6.0.0",
    "standard": "^10.0.3"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "standard --fix",
      "test-precommit",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{js,json}",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": -10
      }
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "runkitExampleFilename": "runkit-example.js"
}
